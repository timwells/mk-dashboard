{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        ".cache"
      ]
    }
  ],
  "storage": [
    {
      "rules": "storage.rules"
    }
  ],
  "emulators": {
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    }
  }
}
